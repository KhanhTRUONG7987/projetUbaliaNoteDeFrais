<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description" content="note de frais Ubalia, gestion des notes de frais d'Ubalia">
    <title>Gestion De La Note de Frais</title>
    <link href="https://fonts.googleapis.com/css2?family=David+Libre:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('Bootstrap/Bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('CSS/style.css') }}">
</head>
<body>
<div class="">
    {% for label, messages in app.flashes('succès') %}
        {% for message in messages %}
            <div class="alert-{{ label }}">
                <h3>{{ message }}</h3>
            </div>
        {% endfor %}
    {% endfor %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_login') }}"><img src="{{ asset('img/logo.svg') }}"></a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto">
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item font-monospace fw-bolder">
                            <a class="nav-link" href="{{ path('note_index') }}">Gestion des notes</a>
                        </li>

                        <li class="nav-item font-monospace fw-bolder">
                            <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                        </li>

                        <li class="nav-item font-monospace fw-bolder">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se Déconnecter</a>
                        </li>

                    {% else %}

                        <li class="nav-item font-monospace fw-bolder">
                            <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                        </li>

                        <li class="nav-item font-monospace fw-bolder">
                            <a class="nav-link" href="{{ path('app_logout') }}">Se Déconnecter</a>
                        </li>


                    {% endif %}
                </ul>

            </div>
        </div>
    </nav>
</div>

{% block body %}

{% endblock %}
</body>
</html>